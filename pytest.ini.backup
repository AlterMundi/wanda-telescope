[tool:pytest]
testpaths = tests
python_files = test_*.py
addopts = -v --cov=camera --cov=main --cov=web --cov=session --cov-report=term-missing --cov-report=term --tb=short
markers =
    unit: Unit tests
    integration: Integration tests
    web: Web interface tests
    all: Run all tests with full coverage report
